<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Configuración del servlet LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bancoplatinum.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Configuración del servlet RegistroServlet -->
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.bancoplatinum.web.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>

    <!-- Configuración del servlet TransferenciaServlet -->
    <servlet>
        <servlet-name>TransferenciaServlet</servlet-name>
        <servlet-class>com.bancoplatinum.web.TransferenciaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferenciaServlet</servlet-name>
        <url-pattern>/transferencia</url-pattern>
    </servlet-mapping>

</web-app>
